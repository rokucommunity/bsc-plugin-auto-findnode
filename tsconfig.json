{
	"compilerOptions": {
		"outDir": "./dist",
		"allowJs": false,
		"module": "commonjs",
		"target": "es6",
		"lib": [
			"esnext"
		],
		"sourceMap": true,
		"downlevelIteration": true,
		"incremental": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true
	},
	"include": [
		"src/**/*.ts"
	],
	"ts-node": {
		"transpileOnly": true
	}
}
